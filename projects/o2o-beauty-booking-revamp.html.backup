    <script>
      document.addEventListener('DOMContentLoaded', function () {
        if (window.mermaid) {
          window.mermaid.initialize({ startOnLoad: true, theme: 'default' });
        }

        // Load metrics from data.json so you can easily update results without editing HTML
        fetch('./o2o-beauty-booking-data.json')
          .then(r => r.ok ? r.json() : null)
          .then(data => {
            if (!data || !data.metrics) return;
            const m = data.metrics;
            const fmt = v => `${v > 0 ? '+' : ''}${Math.round(v * 100)}%`;

            const setText = (id, value) => {
              const el = document.getElementById(id);
              if (el) el.textContent = fmt(value);
            };
            setText('metric-timeToBook', m.timeToBookDelta);
            setText('metric-noShow', m.noShowDelta);
            setText('metric-bookingConversion', m.bookingConversionDelta);
            setText('metric-reschedule', m.rescheduleWithinPolicyDelta);
            const cardMap = {
              'metric-timeToBook-card': m.timeToBookDelta,
              'metric-bookingConversion-card': m.bookingConversionDelta,
              'metric-noShow-card': m.noShowDelta,
              'metric-reschedule': m.rescheduleWithinPolicyDelta,
            };
            Object.entries(cardMap).forEach(([id, val]) => {
              const el = document.getElementById(id);
              if (el) el.textContent = fmt(val);
            });
          })
          .catch(() => {});

        // Lightweight lightbox for gallery images
        const lightbox = document.getElementById('lightbox');
        const imgEl = lightbox?.querySelector('.lightbox__img');
        const captionEl = lightbox?.querySelector('.lightbox__caption');
        const closeBtn = lightbox?.querySelector('.lightbox__close');
        const prevBtn = lightbox?.querySelector('.lightbox__nav.prev');
        const nextBtn = lightbox?.querySelector('.lightbox__nav.next');
        const figures = Array.from(document.querySelectorAll('[data-gallery] figure'));
        let currentIndex = -1;

        function openAt(index) {
          const fig = figures[index];
          if (!fig || !lightbox) return;
          const img = fig.querySelector('img');
          const full = img?.getAttribute('data-full') || img?.getAttribute('src');
          imgEl.src = full;
          imgEl.alt = img?.alt || '';
          captionEl.textContent = fig.querySelector('figcaption')?.textContent || '';
          lightbox.classList.add('open');
          document.body.classList.add('no-scroll');
          lightbox.setAttribute('aria-hidden', 'false');
          currentIndex = index;
        }

        function close() {
          if (!lightbox) return;
          lightbox.classList.remove('open');
          document.body.classList.remove('no-scroll');
          lightbox.setAttribute('aria-hidden', 'true');
          imgEl.src = '';
        }

        function show(delta) {
          const next = (currentIndex + delta + figures.length) % figures.length;
          openAt(next);
        }

        figures.forEach((fig, i) => {
          const img = fig.querySelector('img');
          img?.addEventListener('click', () => openAt(i));
          img?.addEventListener('keydown', (e) => { if (e.key === 'Enter') openAt(i); });
          img?.setAttribute('tabindex', '0');
        });

        closeBtn?.addEventListener('click', close);
        imgEl?.addEventListener('click', close);
        prevBtn?.addEventListener('click', () => show(-1));
        nextBtn?.addEventListener('click', () => show(1));
        document.addEventListener('keydown', (e) => {
          if (!lightbox?.classList.contains('open')) return;
          if (e.key === 'Escape') close();
          if (e.key === 'ArrowLeft') show(-1);
          if (e.key === 'ArrowRight') show(1);
        });

        // Low‑key reveal on scroll
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(e => {
            if (e.isIntersecting) e.target.classList.add('in-view');
          });
        }, { rootMargin: '0px 0px -10% 0px', threshold: 0.1 });
        document.querySelectorAll('[data-reveal]').forEach(el => observer.observe(el));
      });
    </script>
